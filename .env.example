# ── Ghostfolio Connection ─────────────────────────────────────────────
GHOSTFOLIO_URL=http://localhost:3333
GHOSTFOLIO_ACCESS_TOKEN=your-ghostfolio-security-token-here

# ── LLM Providers ─────────────────────────────────────────────────────
# Groq (free — https://console.groq.com)
GROQ_API_KEY=gsk_your_key_here

# OpenAI (paid — https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your_key_here

# Anthropic (paid — https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-your_key_here

# ── LangSmith Tracing (free at smith.langchain.com) ──────────────────
LANGCHAIN_API_KEY=lsv2_your_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=ghostfolio-agent

# ── Langfuse Tracing (free at cloud.langfuse.com) ────────────────────
LANGFUSE_SECRET_KEY=sk-lf-your_key_here
LANGFUSE_PUBLIC_KEY=pk-lf-your_key_here
LANGFUSE_HOST=https://us.cloud.langfuse.com

# ── Agent Config ──────────────────────────────────────────────────────
DEFAULT_LLM_PROVIDER=groq
MAX_AGENT_ITERATIONS=10
LOG_LEVEL=INFO

# ── Ghostfolio Docker (only for docker-compose self-hosting) ─────────
POSTGRES_USER=ghostfolio
POSTGRES_PASSWORD=ghostfolio
POSTGRES_DB=ghostfolio
REDIS_PASSWORD=ghostfolio-redis
ACCESS_TOKEN_SALT=change-this-to-a-random-64-char-hex-string
JWT_SECRET_KEY=change-this-to-a-random-base64-string
